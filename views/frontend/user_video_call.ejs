            }))
        }
     
     gettingdata();
     
     
     //  user room join
     
    let user_update_join = JSON.stringify({
        
            session_id: channelName,
            user_role: "User",
            roomEntryType: 'roomEnter',
    }); 
     
    let userJoin =async function user_join(){
